{
	"compilerOptions": {
		"target": "es6", // Use modern JavaScript features
		"module": "commonJs", // Use CommonJS module system (default for Node.js)
		"esModuleInterop": true, // Enable compatibility between CommonJS and ES Modules
		"strict": true, // Enable strict type checking
		"skipLibCheck": true, // Skip type checking of declaration files (for speed)
		"outDir": "./dist", // Output compiled files in the dist folder
		"rootDir": "./src", // Root directory for TypeScript files
		"resolveJsonModule": true, // Allow importing JSON files
		"declaration": true, // Generate declaration files
		"declarationDir": "./dist/types" // Directory for the declaration files
	},
	"include": ["src/**/*"], // Include all TypeScript files in src folder
	"exclude": ["node_modules"] // Exclude node_modules from compilation
}
